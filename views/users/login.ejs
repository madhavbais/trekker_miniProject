<% layout('layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center mt-3">
        <div class="card shadow mb-5" style="width: 23rem;">
            <img src="https://images.unsplash.com/photo-1625834509314-3b12c6153624?q=80&w=2532&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                alt="" class="card-image-top">
            <div class="card-body">
                <form action="/login" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username: </label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                        <div class="invalid-feedback">
                            Please enter a username
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password: </label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="invalid-feedback">
                            Please enter your password
                        </div>
                    </div>
                    <div class="d-grid block">
                        <button class="btn btn-success">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>